@{
    ViewData["Title"] = "View project authors";
}

<style>
    table {
      border-spacing: 0 15px;
      align-self: center;
        margin: 0 auto; /* Центрирование таблицы */
    }
    th {
      background-color: #4287f5;
      color: white;
    }
    th,
    td {
      width: 250px;
      text-align: center;
      border: 1px solid black;
      padding: 5px;
    }
    h2 {
      color: #4287f5;
        text-align: center; /* Центрирование заголовка, если нужно */
    }
</style>

<div class="text-center">
    <h2 class="display-4" style="text-align: center">Пользователи проекта</h2>
    <br>
    <table>
        <tr>
            <td>Идентификатор</td>
            <td>Имя</td>
            <td>Дата регистрации</td>
        </tr>
        @foreach (var user in Model)
        {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.JoinDate</td>
                </tr>
        }
    </table>
</div>
